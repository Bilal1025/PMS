<div class="col-lg-12 col-md-12">
  <div class="card">
    <div class="card-header card-header-tabs card-header-primary">
      <h4 class="card-title">Listing Users</h4>
      <p class="card-category">List of all the users present in database.</p>
    </div>
    <div class="card-body table-responsive">
      <table class="table table-hover">
        <thead class="text-primary">
          <th>Username</th>
          <th>Email</th>
          <th>Role</th>
          <th>Active</th>
          <th>Edit</th>
          <th>Delete</th>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to titleize(user.username), admin_user_path(user), { rel: "tooltip", title: "Profile", class: "btn btn-primary btn-link btn-sm" } %>
              </td>
              <td><%= user.email %></td>
              <td><%= titleize(user.role) %></td>
              <td>
                <%= link_to boolean_to_string(user.active), toggle_active_admin_user_path(user), { method: :patch, rel: "tooltip", title: "Toogle Active", class: "btn btn-primary btn-link btn-sm" } %>
              </td>
              <td>
                <%= link_to edit_admin_user_path(user), { rel: "tooltip", title: "Edit User", class: "btn btn-primary btn-link btn-sm" } do %>
                  <i class="material-icons">edit</i>
                <% end %>
              </td>
              <td>
                <%= link_to admin_user_path(user), { rel: "tooltip", title: "Delete User", class: "btn btn-primary btn-link btn-sm" , method: :delete, data: { confirm: 'Are you sure?' } }  do %>
                  <i class="material-icons">delete</i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New User', new_admin_user_path, { class: "btn btn-primary pull-right" } %>
    </div>
  </div>
</div>
