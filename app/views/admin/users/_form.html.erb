<%= form_for [:admin, @user] do |f| %>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :username, class: "bmd-label-floating" %>
        <%= f.text_field :username, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :email, class: "bmd-label-floating" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :password, class: "bmd-label-floating" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :password_confirmation, class: "bmd-label-floating" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-check">
    <%= f.label :active, class: "form-check-label" do %>
      <%= f.check_box :active, class: "form-check-input" %>
      <span class="form-check-sign">
      <span class="check"></span>
      </span>
        Active
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class='form-group'>
        <%= f.label :role, class: "bmd-label-floating" %>
        <%= f.select :role, roles_list, {}, { class: "form-control" } %>
      </div>
    </div>
  </div>


  <%= f.submit class: "btn btn-primary col-md-12" %>

  <div class="link">
    <%= link_to 'Back', admin_users_path %>
  </div>
<% end %>
