<div class="col-lg-12 col-md-12">
  <div class="card">
    <div class="card-header card-header-tabs card-header-primary">
      <h4 class="card-title">Clients Listing</h4>
      <p class="card-category">List of all the clients with thier projects in the system</p>
    </div>
    <div class="card-body table-responsive">
      <table class="table table-hover">
        <thead class="text-primary">
          <th>Name</th>
          <th>Projects</th>
          <th>Edit</th>
          <th>Delete</th>
        </thead>
        <tbody>
          <% @clients.each do |client| %>
            <tr>
              <td>
                <%= link_to titleize(client.name), admin_client_path(client), { rel: "tooltip", title: "Profile", class: "btn btn-primary btn-link btn-sm" } %>
              </td>
              <td>
                <%= client.projects.count %>
              </td>
              <td>
                <%= link_to edit_admin_client_path(client), { rel: "tooltip", title: "Edit Client", class: "btn btn-primary btn-link btn-sm" } do %>
                  <i class="material-icons">edit</i>
                <% end %>
              </td>
              <td>
                <%= link_to admin_client_path(client), { rel: "tooltip", title: "Delete Client", class: "btn btn-primary btn-link btn-sm" , method: :delete, data: { confirm: 'Are you sure?' } }  do %>
                  <i class="material-icons">delete</i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New Client', new_admin_client_path, class: "btn btn-primary pull-right" %>
    </div>
  </div>
</div>
