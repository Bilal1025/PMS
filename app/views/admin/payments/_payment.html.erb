<%= form_for [:admin, @project, @project.payments.build] do |f| %>
  <div class="col-md-12">
    <div class="form-group">
      <%= f.label :amount, class: "bmd-label-floating" %>
      <%= f.number_field :amount, class: "form-control" %>
    </div>

    <%= f.submit class: "btn btn-primary pull-right" %>
  </div>
<% end %>
