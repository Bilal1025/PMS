<div class="sidebar" data-color="purple" data-background-color="white" data-image=<%= asset_path 'sidebar-1.jpg' %>>
  <div class="logo">
    <%= link_to "PMS", root_url, { class: "simple-text logo-normal" } %>
  </div>

  <div class="sidebar-wrapper">
    <ul class="nav">
      <li class="nav-item">
        <%= link_to root_url, class: "nav-link" do %>
          <i class="material-icons">group_work</i>
          <p>Projects</p>
        <% end %>
      </li>

      <% if current_user.admin? %>
        <li class="nav-item">
          <%= link_to admin_users_path, class: "nav-link" do %>
            <i class="material-icons">person</i>
            <p>Users</p>
          <% end %>
        </li>
      <% end %>

      <li class="nav-item">
        <%= link_to url_for_client, class: "nav-link" do %>
          <i class="material-icons">work</i>
          <p>Clients</p>
        <% end %>
      </li>
    </ul>
  </div>
</div>
