<div class="col-md-2"></div>

<div class="col-md-8">
<div class="card card-profile">
  <div class="card-avatar">
     <%= image_tag "faces/marc.jpg" %> />
  </div>
  <div class="card-body">
    <h4 class="card-title"><%= titleize(@client.name) %></h4>
    <p class="card-description">

    </p>
    <%= link_to "Edit", edit_client_path(@client), class: "btn btn-primary btn-round" %>
    <%= link_to "Delete", client_path(@client), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-round" %>
  </div>
</div>
</div>

<div class="col-lg-12 col-md-12">
  <div class="card">
    <div class="card-header card-header-tabs card-header-primary">
      <h4 class="card-title">Projects</h4>
      <p class="card-category">List of all the Projects from <%= @client.name %></p>
    </div>
    <div class="card-body table-responsive">
      <table class="table table-hover">
        <thead class="text-primary">
          <th>Name</th>
          <th>By</th>
          <th>Edit</th>
          <th>Delete</th>
        </thead>
        <tbody>
          <% @client.projects.each do |project| %>
            <tr>
              <td>
                <%= link_to titleize(project.name), project_path(project), { rel: "tooltip", title: "View", class: "btn btn-primary btn-link btn-sm" } %>
              </td>
              <td>
                <%= link_to titleize(project.client.name), client_path(project.client), { rel: "tooltip", title: "Profile", class: "btn btn-primary btn-link btn-sm" } %>
              </td>
              <td>
                <%= link_to edit_project_path(project), { rel: "tooltip", title: "Edit Project", class: "btn btn-primary btn-link btn-sm" } do %>
                  <i class="material-icons">edit</i>
                <% end %>
              </td>
              <td>
                <%= link_to project_path(project), { rel: "tooltip", title: "Delete Project", class: "btn btn-primary btn-link btn-sm" , method: :delete, data: { confirm: 'Are you sure?' } }  do %>
                  <i class="material-icons">delete</i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="link">
    <%= link_to 'Back', clients_path, class: "btn btn-primary" %>
  </div>
</div>
