<div class="col-md-4"></div>

<div class="col-md-4">
  <div class="card">
    <div class="card-header card-header-primary">
      <h4 class="card-title">Sign up</h4>
      <p class="card-category">Register at Project Management System</p>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :username, class: "bmd-label-floating" %>
              <%= f.text_field :username, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :email, class: "bmd-label-floating" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :password, class: "bmd-label-floating" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :password_confirmation, class: "bmd-label-floating" %>
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>
          </div>
        </div>

        <%= f.submit "Sign up", class: "btn btn-primary col-md-12" %>

        <div class="link">
          <%= f.label "Already Registered? " %>
          <%= link_to "Login Here!", new_session_path(resource_name) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
