

<div class="col-md-2"></div>

<div class="col-md-8">
  <div class="card">
    <div class="card-header card-header-primary">
      <h4 class="card-title">Edit Profile</h4>
      <p class="card-category">Change Everything related to your profile!</p>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :username, class: "bmd-label-floating" %>
              <%= f.text_field :username, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :email, class: "bmd-label-floating" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :password, class: "bmd-label-floating" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :password_confirmation, class: "bmd-label-floating" %>
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :current_password, class: "bmd-label-floating" %>
              <%= f.password_field :current_password, class: "form-control" %>
            </div>
          </div>
        </div>

        <%= f.submit "Update", class: "btn btn-primary col-md-12" %>

        <div class="link">
          <%= link_to "Back to Home!", root_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>
